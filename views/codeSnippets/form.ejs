<!doctype html>
<html lang="en" class="no-js">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,700' rel='stylesheet' type='text/css'>
	<link rel="stylesheet" type="text/css" href="/css/common/reset.css"></link> <!-- css for reset -->

	<link rel="stylesheet" type="text/css" href="/css/codeSnippets/form.css"></link> <!-- css for the form -->
	<link rel="stylesheet" type="text/css" href="/css/common/tooltipster.css"></link> <!-- css for tooltipster -->
    <script src="/js/home3/jquery-1.10.2.js"></script> <!-- js for jquery -->
    <script src="/js/home3/modernizr-2.6.2.min.js"></script>  <!-- Modernizr /-->
  	<script src="/js/common/tooltipster.js"></script> <!-- tooltipster js file -->
	<script src="/js/codeSnippets/form.js"></script> <!-- form js file -->

	<style>
		#myfield_description {
			display: none;
		}
	</style>
	<script type="text/javascript">

		$(document).ready(function(){
			$('.cd-form input[type="submit"]').click(function(e){
				var myfield = $('.myfield').val();
				if(myfield.length == 0){
					e.preventDefault();
					$('.myfield').tooltipster({
						autoClose:false,
						trigger:'custom',
					    functionInit: function(){
					        return $('#myfield_description').html();
					    }

					});
					$('.myfield').tooltipster('show');
				}

			   	// as soon as a key is pressed on the keyboard, hide the tooltip.
				$(window).keypress(function() {
				  $('.myfield').tooltipster('hide');
				});						
			});
		});	

	</script>

  	
	<title>Contact Form | CodyHouse</title>
</head>
<body>

	<form class="cd-form floating-labels">

		<!-- <input id="myfield" type="text" aria-describedby="myfield_description" required>
		<span id="myfield_description" role="tooltip">Please insert your name here</span> -->
		
		<fieldset>
			<legend>Account Info</legend>

			<div class="icon">
				<label class="cd-label" for="cd-name">Name</label>
				<input class="user required" type="text" name="cd-name" id="cd-name" >
		    </div> 

			<div class="icon">
				<label class="cd-label" for="cd-name">Name</label>
				<input class="user myfield required" type="text" name="cd-name" id="cd-name" type="text" aria-describedby="myfield_description">
				<span id="myfield_description" role="tooltip">Please insert your name here</span>
		    </div> 		    



		    <div class="icon">
		    	<label class="cd-label" for="cd-company">Company</label>
				<input class="company" type="text" name="cd-company" id="cd-company">
		    </div> 

		    <div class="icon">
		    	<label class="cd-label" for="cd-email">Email</label>
				<input class="email error" type="email" name="cd-email" id="cd-email">
		    </div>
		</fieldset>

		<fieldset>
			<legend>Project Info</legend>

			<div>
				<h4>Budget</h4>

				<p class="cd-select icon">
					<select class="budget">
						<option value="0">Select Budget</option>
						<option value="1">&lt; $5000</option>
						<option value="2">$5000 - $10000</option>
						<option value="3">&gt; $10000</option>
					</select>
				</p>
			</div> 

			<div>
				<h4>Project type</h4>

				<ul class="cd-form-list">
					<li>
						<input type="radio" name="radio-button" id="cd-radio-1" checked>
						<label for="cd-radio-1">Choice 1</label>
					</li>
						
					<li>
						<input type="radio" name="radio-button" id="cd-radio-2">
						<label for="cd-radio-2">Choice 2</label>
					</li>

					<li>
						<input type="radio" name="radio-button" id="cd-radio-3">
						<label for="cd-radio-3">Choice 3</label>
					</li>
				</ul>
			</div>

			<div>
				<h4>Features</h4>

				<ul class="cd-form-list">
					<li>
						<input type="checkbox" id="cd-checkbox-1">
						<label for="cd-checkbox-1">Option 1</label>
					</li>

					<li>
						<input type="checkbox" id="cd-checkbox-2">
						<label for="cd-checkbox-2">Option 2</label>
					</li>

					<li>
						<input type="checkbox" id="cd-checkbox-3">
						<label for="cd-checkbox-3">Option 3</label>
					</li>
				</ul>
			</div>

			<div class="icon">
				<label class="cd-label" for="cd-textarea">Project description</label>
      			<textarea class="message required" name="cd-textarea" id="cd-textarea"></textarea>
			</div>

			<div>
		      	<input type="submit" value="Send Message">
		    </div>
		</fieldset>
	</form>

</body>
</html>